{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
<div class="row">

    {% for person in listPerson %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ person.lastname }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ person.firstname }} {{ person.lastname }}</h6>
            <p class="card-text">Age : {{ person.age }}</p>
            <a href="{{ path('person_detail',{id: person.id}) }}" class="card-link">Detail</a>
            <a href="{{ path('person_delete',{id: person.id}) }}" class="card-link">Delete</a>
        </div>
    </div>
    {% endfor %}

    {% if isPaginated is defined and isPaginated %}
        <div class="row mt-2">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {% if page != 1 %}
                        <li class="page-item"><a class="page-link" href="{{ path('person_all',{page: page - 1, nbr: nbr}) }}">Previous</a></li>
                    {% endif %}
                    {% for i in range(1,nbrTotalPage) %}
                        <li class="page-item"><a class="page-link" href="{{ path('person_all',{page: i, nbr: nbr}) }}">{{ i }}</a></li>
                    {% endfor %}
                    {% if page != nbrTotalPage %}
                    <li class="page-item"><a class="page-link" href="{{ path('person_all',{page: page + 1, nbr: nbr}) }}">Next</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>

    {% endif %}
{% endblock %}
